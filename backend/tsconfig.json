{
	"compilerOptions": {
		"target": "ES2020", // Specifies what version of ECMAScript the code should be compiled to.
		"module": "CommonJS", // Specifies what module code should be generated.
		"moduleResolution": "node", // Specifies how TypeScript should resolve module imports.
		"outDir": "./dist/src", // Redirect output structure to the directory.
		"rootDir": "./src",
		"strict": true, // Enable all strict type-checking options.
		"esModuleInterop": true, // This will allow you to use default imports with CommonJS modules.
		"skipLibCheck": true, // this option will skip type checking all .d.ts files.
		"baseUrl": "./src",
		"noEmitOnError": false // Ensures output is generated even if there are errors
	},
	"ts-node": {
		"esm": true
	},
	"eslint": {
		"ignoreDuringBuilds": true
	},
	"typescript": {
		"ignoreBuildErrors": true // Ignore TypeScript errors during builds
	},
	"include": ["src/**/*.ts"], // Specifies which files to include when compiling your project.
	"exclude": ["node_modules", "**/*.spec.ts"] // Specifies which files to exclude when compiling your project.
}
